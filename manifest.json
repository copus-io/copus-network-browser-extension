{
  "manifest_version": 3,
  "name": "Copus - Internet Treasure Map",
  "description": "Save and share web finds. Set pay-to-unlock via x402 and earn from quality curation.",
  "version": "1.12.7",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "tabCapture",
    "contextMenus",
    "storage",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": [
    "https://api-prod.copus.network/*",
    "https://api-test.copus.network/*",
    "https://copus.network/*",
    "https://test.copus.network/*",
    "https://copus.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Copus sidebar"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_start"
    }
  ]
}
